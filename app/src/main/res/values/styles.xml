<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>

        <!-- Customize your theme here. -->
        <item name = "windowNoTitle">true</item>
        <item name = "windowActionBar">false</item>
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->

        <item name="preferenceFragmentCompatStyle">
            @style/AppPreferenceFragmentCompatStyle
        </item>

    </style>

    <style name="AppPreferenceFragmentCompatStyle"
        parent="@style/PreferenceFragment.Material">
        <item name="android:layout">@layout/pref_settings</item>
    </style>

    <style name="style_toggle_button" parent="android:Widget">
        <item name="android:background">@drawable/bg_rounded_rectangle_accent</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="style_toggle_button_accent">
        <item name="android:buttonStyleToggle">@style/style_toggle_button</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

</resources>
